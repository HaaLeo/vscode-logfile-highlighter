{
	"name": "LogFileHighlighter",
	"displayName": "Log File Highlighter",
	"icon": "content/appicon.png",
	"description": "Adds color highlighting to log files to make it easier to follow the flow of log events and identify problems.",
	"categories": [
		"Other"
	],
	"license": "MIT",
	"version": "2.0.0",
	"bugs": {
		"url": "https://github.com/emilast/vscode-logfile-highlighter/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/emilast/vscode-logfile-highlighter.git"
	},
	"engines": {
		"vscode": "^1.15.0"
	},
	"publisher": "emilast",
	"main": "./out/src/extension",
	"contributes": {
		"languages": [
			{
				"id": "log",
				"aliases": [
					"Log File",
					"log"
				],
				"extensions": [
					".log"
				]
			}
		],
		"grammars": [
			{
				"language": "log",
				"scopeName": "text.log",
				"path": "./syntaxes/log.tmLanguage"
			}
		],
		"configuration": {
		"type": "object",
		"title": "The vscode-logfile-highlighter configuration.",
		"properties": {
			"logFileHighlighter.customLogLevel": {
				"type": ["array"],
				"items": {
					"description": "Custom log level.",
					"type": "object",
					"properties": {
						"name": {
							"type": "string",
							"description": "The name that will be highlighted."
						},
						"color": {
							"type": "string",
							"description": "The color that will be used for highlighting."
						}
					}
				},
				"description": "An array of custom log level that shall be highlighted."
			}
		}
	}
	},
	"activationEvents": [
		"onLanguage:log"
	],
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"integrationtest": "npm run compile && node ./node_modules/vscode/bin/test",
		"tslint": "tslint --project ./",
		"unittest": "node out/test/testRunner.js -c jasmine.unittest.json"
	},
	"devDependencies": {
		"@types/jasmine": "^2.8.6",
		"@types/node": "^9.4.0",
		"jasmine": "^2.9.0",
		"jasmine-core": "^2.9.1",
		"tslint": "^5.9.1",
		"typescript": "^2.6.2",
		"vscode": "^1.1.10"
	},
	"dependencies": {
		"moment": "^2.20.1"
	}
}
